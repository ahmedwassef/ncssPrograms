<div{{ attributes.addClass('toolbar') }}>
    <nav{{ toolbar_attributes.addClass('toolbar-bar') }}>
        <h2 class="visually-hidden">{{ toolbar_heading }}</h2>
        {% for key, tab in tabs %}
            {% set tray = trays[key] %}
            <div{{ tab.attributes.addClass('toolbar-tab') }}>
                {{ tab.link }}
                {% apply spaceless %}
                    <div{{ tray.attributes }}>
                        {% if tray.label %}
                        <nav class="toolbar-lining clearfix" aria-label="{{ tray.label }}">
                            <h3 class="toolbar-tray-name visually-hidden">{{ tray.label }}</h3>
                            {% else %}
                            <nav class="toolbar-lining clearfix">
                                {% endif %}
                                {{ tray.links }}
                            </nav>
                    </div>
                {% endapply %}
            </div>
        {% endfor %}
    </nav>
    {{ remainder }}
</div>
